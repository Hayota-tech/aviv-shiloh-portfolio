{
	"name": "aviv-shiloh-portfolio",
	"version": "1.0.0",
	"private": true,
	"description": "Aviv Shiloh portfolio",
	"author": "Hayota Studio <hayota.studio@gmail.com> (https://hayota.studio)",
	"license": "UNLICENSED",
	"scripts": {
		"husky:install": "husky install",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"onboarding": "node ./scripts/onboarding.cjs",
		"prepare": "is-ci || is-docker || run-s setdev onboarding",
		"lint:root": "eslint -c ./.eslintrc.cjs --ignore-pattern \"apps\" --ignore-pattern \"packages\" \"**/*.{ts,js,cjs}\" --resolve-plugins-relative-to .",
		"lint:nested": "nx run-many --target=lint --nx-bail",
		"lint:all": "run-p lint:root lint:nested",
		"type-check:nested": "nx run-many --target=type-check --projects=frontend --nx-bail",
		"inflint": "inflint -c ./inflint.config.ts",
		"depcheck:root": "depcheck --config ./.depcheckrc.json",
		"depcheck:nested": "nx run-many --target=depcheck --nx-bail",
		"depcheck:all": "run-p depcheck:root",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}"
	},
	"devDependencies": {
		"@commitlint/cli": "17.6.1",
		"@exlint.io/inflint": "1.2.10",
		"chalk": "4.1.2",
		"commitizen": "4.3.0",
		"cz-vinyl": "2.3.0",
		"depcheck": "1.4.3",
		"figlet": "1.6.0",
		"husky": "8.0.3",
		"is-ci": "3.0.1",
		"lint-staged": "13.2.1",
		"npm-run-all": "4.1.5",
		"nx": "15.9.2",
		"open": "9.1.0",
		"prettier": "2.8.7",
		"prettier-plugin-sh": "0.12.8",
		"rimraf": "5.0.0",
		"wait-on": "7.0.1"
	},
	"engines": {
		"node": "18.15.0"
	}
}
